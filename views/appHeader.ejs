<script>
  var logIn = "<%=LOGIN%>"
  var HEADADDRESIES = []
  var MACTIME;
  var seletedCoin = 0;
  var headProduct;
  var firstLogin = <%=FIRSTLOGIN%>
    setTimeout(() => {}, 1000 * 20)

  function closePop(id, reload, page) {
    // if(id=='menu-success-2') location.reload()
    $('#' + id).hideMenu();
    if (reload) location.reload()
    if (page) location.href = page
  }

  function openPop(type, msg) {
    if (type == 'S') {
      $('#menu-success-2').showMenu();
      $("#scontent").text(msg)
    } else if (type == 'RS') {
      $('#menu-success-3').showMenu();
      $("#scontent1").text(msg)
    } else if (type == 'WR') {
      $('#menu-warning-2').showMenu();
      $("#warnContent").text(msg)
    } else if (type == 'WRF') {
      $('#menu-warning-3').showMenu();
    } else {
      $('#menu-warning-1').showMenu();
      $("#fcontent").text(msg)
    }
  }
  $(document).ready(() => {
    // window.onhashchange = function() {
    //   alert("뒤로간다!")
    // }
    if (firstLogin) {
      var audio = new Audio('/config/Login_Succeed_KOR.mp3')
      audio.volume = 0.05;
      audio.play();
      audio.addEventListener("ended", () => {
        reqApi({
          URL: 'getBalances',
        }).then(data => {
          var audioBal = data.BALANCES
          if (audioBal.FRM_RATE == 0) {
            var audio1 = new Audio('/config/FIRST_FARMBUY.mp3')
            audio1.volume = 0.05;
            audio1.play();
            audio1.addEventListener("ended", () => {
              // location.reload()
            })
          } else if (audioBal.FRM_RATE >= 250) {
            var audio1 = new Audio('/config/FARM_BUY.mp3')
            audio1.volume = 0.05;
            audio1.play();
            audio1.addEventListener("ended", () => {
              // location.reload()
            })
          }
        })
      });
      reqApi({
        URL: 'logined',
      })
    }
    reqApiList({
      URL: 'getCoinAddrs',
    }).then((data) => {
      HEADADDRESIES = data.ADDRESIES[0]
      var innerHtml = '';
      for (var i = 0; i < HEADADDRESIES.length; i++) {
        innerHtml += '<option value="' + i + '">' + HEADADDRESIES[i]['D_GUBUN'] + '</option>';
      }
      $("#selecTedCoin1").append(innerHtml)
      $("#CRATE").text(HEADADDRESIES[seletedCoin].RATE)
      commonLib.bindValue(HEADADDRESIES[seletedCoin])
      $("#qrcode").attr("src", HEADADDRESIES[seletedCoin]['QRCODE'])
    })
    reqApiList({
      URL: 'getProducts',
    }).then((data) => {
      $("#PRODCONTENT").empty()
      headProduct = data.PRODUCTS[0]
      commonLib.bindValue(headProduct[0])
    })

  })

  function changeCoin2(selBox) {
    seletedCoin = ($(selBox).val() == undefined) ? 0 : $(selBox).val()
    $("#CRATE").text(HEADADDRESIES[seletedCoin].RATE)
    commonLib.bindValue(HEADADDRESIES[seletedCoin])
    $("#qrcode").attr("src", HEADADDRESIES[seletedCoin]['QRCODE'])
  }

  function reqBuy() {
    if ("<%=MACTIME.MATLEV%>" != "-1" && $("#D_QTY").val() > 0) {
      reqApi({
        URL: 'accountBuy',
        PARAM: {
          D_LEVEL: $("#LEVEL").val(),
          D_QTY: $("#D_QTY").val(),
          D_ROUND: "<%=MACTIME.S_ALLCNT%>",
        }
      }).then((data) => {
        if (data.ACCBUY.RESULT == 0) {
          openPop("RS", "<%=LANG['LANG29'][NUM]%>")
        } else if (data.ACCBUY.RESULT == 4) {
          openPop("F", "USD" + "<%=LANG['LANG256'][NUM]%>")
        } else {
          openPop("F", "USD" + "<%=LANG['LANG30'][NUM]%>")
        }
      })
    } else {
      //  $("#menu-success-2").trigger("click")
      openPop("F", "<%=LANG['LANG31'][NUM]%>")
    }
  }

  function copyTextInModal() {
    var dummyLink = HEADADDRESIES[seletedCoin]['ADDRESS'];
    var dummy = $('<input>').val(dummyLink).appendTo('body').select();
    dummy.focus();
    document.execCommand('copy');
    openPop("S", "Copied")
  }

  function changeLev(val) {
    var index = $(val).val().replace('0', '')
    commonLib.bindValue(headProduct[index - 1])
  }
</script>
